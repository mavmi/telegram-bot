<?xml version="1.0" encoding="UTF-8"?>
<Configuration statis="info">

    <Properties>
        <Property name="dbDriverClass">${spring.datasource.driver-class-name}</Property>
        <Property name="dbUrl">${spring.datasource.url}</Property>
        <Property name="dbUsername">${spring.datasource.hikari.username}</Property>
        <Property name="dbPassword">${spring.datasource.hikari.password}</Property>
    </Properties>

    <Appenders>
        <Console name="CONSOLE">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n"/>
        </Console>

        <File name="FILE" fileName="${sys:LOG_FILE}">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="FILE"/>
        </Root>
    </Loggers>

</Configuration>
