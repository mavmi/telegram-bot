<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>telegram-bot</groupId>
    <artifactId>TELEGRAM-BOT</artifactId>
    <version>00</version>
    <packaging>pom</packaging>

    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <telegram.bot.version>6.7.0</telegram.bot.version>
        <spring.framwork.version>6.0.9</spring.framwork.version>
        <spring.boot.version>3.1.2</spring.boot.version>
        <spring.web.version>6.0.11</spring.web.version>
        <gson.version>2.10.1</gson.version>
        <psql.version>42.6.0</psql.version>
        <jsoup.version>1.16.1</jsoup.version>
        <lombok.version>1.18.26</lombok.version>
        <memes4j.version>0.1.1</memes4j.version>
        <hikari.version>5.0.1</hikari.version>
        <selenium.version>4.10.0</selenium.version>
        <okhttp.version>4.11.0</okhttp.version>
        <tomcat.version>10.1.11</tomcat.version>
    </properties>

    <modules>
        <module>CHAT-GPT-BOT</module>
        <module>SHAKAL-BOT</module>
        <module>WATER-STUFF-BOT</module>
        <module>common</module>
        <module>CRV-BOT</module>
        <module>MONITORING-BOT</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.github.pengrad</groupId>
                <artifactId>java-telegram-bot-api</artifactId>
                <version>6.7.0</version>
            </dependency>

            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-context</artifactId>
                <version>${spring.framwork.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-core</artifactId>
                <version>${spring.framwork.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-beans</artifactId>
                <version>${spring.framwork.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-jdbc</artifactId>
                <version>${spring.framwork.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-autoconfigure</artifactId>
                <version>${spring.boot.version}</version>
            </dependency>

            <dependency>
                <groupId>org.seleniumhq.selenium</groupId>
                <artifactId>selenium-java</artifactId>
                <version>${selenium.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>
